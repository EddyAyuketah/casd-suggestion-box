"""
    
    return html

# ============================================================================
# MAIN EXECUTION
# ============================================================================

def ensure_directory_exists(file_path):
    """Create directory if it doesn't exist"""
    directory = os.path.dirname(file_path)
    if directory and not os.path.exists(directory):
        try:
            os.makedirs(directory, exist_ok=True)
            print(f"Created directory: {directory}")
        except Exception as e:
            print(f"Warning: Could not create directory {directory}: {e}")
            return False
    return True

def main():
    """Main execution function"""
    print("=" * 80)
    print("STATIC LOTS ACCOUNTABILITY REPORT")
    print("=" * 80)
    print(f"Report Time: {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}")
    print()
    
    # Load data
    print("Loading lots data...")
    df = load_lots_data()
    print(f"Found {len(df)} static lots")
    
    # Process data
    print("Processing and scoring lots...")
    df = process_lots_data(df)
    
    # Load and update history
    print("Updating historical tracking...")
    history = load_history()
    history = update_history(df, history)
    save_history(history)
    
    # Calculate trends
    print("Calculating trends...")
    trends = calculate_trends(history)
    
    # Generate accountability metrics
    print("Generating accountability metrics...")
    metrics = generate_accountability_report(df)
    
    # Identify chronic lots
    print("Identifying chronic static lots...")
    chronic_lots = identify_chronic_lots(df, history)
    
    # Generate HTML report
    print("Generating HTML report...")
    html = generate_html_report(df, metrics, trends, chronic_lots)
    
    # Ensure directory exists and save report
    print("Saving HTML report...")
    if ensure_directory_exists(OUTPUT_PATH):
        try:
            with open(OUTPUT_PATH, 'w', encoding='utf-8') as f:
                f.write(html)
            print(f"Report saved successfully to: {OUTPUT_PATH}")
        except Exception as e:
            print(f"Error saving report: {e}")
            # Fallback to local directory
            local_path = "static_lots_report.html"
            with open(local_path, 'w', encoding='utf-8') as f:
                f.write(html)
            print(f"Report saved to local directory: {local_path}")
    else:
        # Fallback to local directory
        local_path = "static_lots_report.html"
        with open(local_path, 'w', encoding='utf-8') as f:
            f.write(html)
        print(f"Could not access network path. Report saved locally: {local_path}")
    
    # Save report
    with open(OUTPUT_PATH, 'w', encoding='utf-8') as f:
        f.write(html)
    
    print()
    print("=" * 80)
    print("REPORT SUMMARY")
    print("=" * 80)
    print(f"Total Static Lots: {len(df)}")
    print(f"Critical Lots: {len(df[df['CATEGORY'].str.contains('CRITICAL')])}")
    print(f"High Risk Lots: {len(df[df['CATEGORY'].str.contains('HIGH RISK')])}")
    print(f"Trend (24h): {trends.get('trend', 'N/A')}")
    print(f"Change: {trends.get('change_24h', 0):+d} lots")
    print(f"Total Wafers: {int(df['WAFER_QTY'].sum())}")
    print()
    print(f"Report saved to: {OUTPUT_PATH}")
    print("=" * 80)
    
    # Print top 5 worst CEIDs
    print()
    print("TOP 5 CEIDS NEEDING ATTENTION:")
    print("-" * 80)
    top_ceids = metrics['by_ceid'].head(5)
    for idx, (ceid, row) in enumerate(top_ceids.iterrows(), 1):
        print(f"{idx}. CEID {ceid}: {int(row['Total_Lots'])} lots, "
              f"Risk Score: {row['Avg_Risk']:.1f}, "
              f"{int(row['Critical_Lots'])} critical")
    print("=" * 80)

if __name__ == "__main__":
    main()
